extends ../layout

block content
  h1 Return Book
  if errors && errors.length
    ul.errors
      each error in errors
        li= error
  p
    strong Book Title:
    | #{loan.Book.title}
  p
    strong Loaned By:
    | #{loan.Patron.first_name} #{loan.Patron.last_name}
  p
    strong Loaned On:
    | #{loan.loaned_on}
  p 
    strong Return By:
    | #{loan.return_by}
  form(method='post', action='/loans/' + loan.id + '/return')
    p
      label(for='returned_on') Returned on:
      input#returned_on(type='text', name='returned_on', value=(loan.returned_on ? loan.returned_on : returnedOn), readonly)
    p
      input(type='submit', value='Return Book')
