extends ../layout

block content
  h1 New Loan
  form(method='post', action='/loans/new')
    if errors
      h2.error Oooops!
      ul.error
        each error in errors
          li= error
    p
      label(for='book_id') Book
      select#book_id(name='book_id')
        option(value='') -- Select a book --
        each book in books
          if book_id && book_id == book.id
            option(value=book.id, selected)= book.title
          else
            option(value=book.id)= book.title
    p
      label(for='patron_id') Patron
      select#patron_id(name='patron_id')
        option(value='') -- Select a patron --
        each patron in patrons
          if patron_id && patron_id == patron.id
            option(value=patron.id, selected)= patron.library_id + ' - ' + patron.first_name + ' ' + patron.last_name
          else
            option(value=patron.id)= patron.library_id + ' - ' + patron.first_name + ' ' + patron.last_name
    p
      input(type='submit', value='Create New Loan')
